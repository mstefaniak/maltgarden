{
  "name": "Maltgarden",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next-translate && next dev",
    "build": "next-translate && next build",
    "start": "next start",
    "checkTS": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "date-fns": "^2.16.1",
    "gray-matter": "^4.0.2",
    "js-cookie": "^2.2.1",
    "next": "^10.0.0",
    "next-translate": "^0.19.4",
    "react": "^17.0.1",
    "react-datocms": "^1.4.5",
    "react-dom": "16.13.1",
    "react-spring": "^8.0.27",
    "remark": "^13.0.0",
    "remark-html": "^13.0.1"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/js-cookie": "^2.2.6",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.56",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged",
      "pre-push": "yarn checkTS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "eslintIgnore": [
    "pages/*"
  ],
  "browserslist": [
    "last 2 versions",
    "not dead"
  ]
}
